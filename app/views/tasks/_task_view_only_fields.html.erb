<div class="row mt-3">
  <label class="col-sm-2 col-form-label col-form-label-lg" for="task_created_at">Created at</label>
  <div class="col-sm-4 pt-2">
    <%= @task.created_at.strftime("%-d-%b-%Y") %>
  </div>
</div>
<div class="row mt-2">
  <label class="col-sm-2 col-form-label col-form-label-lg" for="task_created_at">Created by</label>
  <div class="col-sm-4 pt-2">
    <%= @task.created_by.full_name %>
  </div>
</div>
