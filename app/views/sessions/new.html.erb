<h1 class="text-center mt-4"> Log In </h1>
<div class="container">
  <%= form_with url: "/login", method: :post, class: "form p-3 mb-3" do |f| %>
    <div class="row">
      <%= f.label :email, class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email address" %>
      </div>
    </div>

    <div class="row mt-3">
      <%= f.label :password, class: "col-sm-2 col-form-label col-form-label-lg" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Enter your password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "Log in", class: "offset-sm-4 col-sm-4 btn btn-primary btn-lg mt-3" %>
    </div>
  <% end %>
</div>
