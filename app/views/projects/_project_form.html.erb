<%= form_with model: @project, local: true, class: "form" do |f| %>
  <div class="row">
    <%= f.label :title, class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title", required: true, minlength: 4, disabled: view_only %>
    </div>
  </div>

  <div class="row">
    <%= f.label :code, class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-4">
      <%= f.text_field :code, class: "form-control", placeholder: "Enter code", required: true, maxlength: 8, disabled: view_only %>
    </div>
  </div>

  <div class="row mt-3">
    <%= f.label :description, class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", placeholder: "Enter description", required: true, minlength: 15, disabled: view_only %>
    </div>
  </div>

  <div class="row mt-4">
    <%= f.label :project_lead, class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-4">
      <%= f.collection_select :project_lead_id, User.order(:first_name, :last_name), :id, :full_name, { prompt: "Select project lead" }, { class: "form-select", disabled: view_only } %>
    </div>
  </div>

  <% unless view_only %>
    <div class="form-group">
      <%= f.submit "Submit", class: "offset-sm-4 col-sm-4 btn btn-primary btn-lg mt-4" %>
    </div>
  <% end %>
<% end %>
