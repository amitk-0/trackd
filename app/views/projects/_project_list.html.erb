<div class="project-list">
  <table class="table table-bordered table-striped ">
    <thead>
    <tr>
      <th class="col-1"> Code </th>
      <th class="col-2"> Title </th>
      <th class="col-3"> Description </th>
      <th class="col-1"> Project lead </th>
      <th class="col-2"></th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="col-1"> <%= project.code %> </td>
        <td class="col-2"> <%= project.title %> </td>
        <td class="col-3"> <%= project.description %> </td>
        <td class="col-1"> <%= project.project_lead.try(:full_name) %> </td>
        <td class="col-2">
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-primary me-1" %>
          <%= link_to "Show all tasks", "/projects/project_tasks/#{project.id}", class: "btn btn-primary me-1" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
